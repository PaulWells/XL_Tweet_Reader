<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xl_bootcamp.xl_tweet_reader"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.xl_bootcamp.xl_tweet_reader.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.xl_bootcamp.xl_tweet_reader.CustomSearchActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_custom_search"
            android:parentActivityName="com.xl_bootcamp.xl_tweet_reader.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.xl_bootcamp.xl_tweet_reader.MainActivity" />
        </activity>
        <activity
            android:name="com.xl_bootcamp.xl_tweet_reader.Search_Tweet_Activity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_search__tweet_" >
        </activity>
    </application>

</manifest>